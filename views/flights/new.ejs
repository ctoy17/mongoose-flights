<%- include('../partials/header') %>
<title>New Flight</title>
<h2>Enter a New Flight:</h2>
<div class="newFlight">
<form action="/flights" method="POST">
  <label>Airline:
    <select name="airline">
      <option class="dropdown-item disabled" default>Select Airline</option>
      <option value="American">American</option> 
      <option value = "Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
  </label><br>
  <label>Airport:
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN" selected>DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select>
  </label><br>
  <label>Flight Number:
    <input type="number" name="flightNo">
  </label><br>
  <label>Departure Date:
    <input type="datetime-local" name="departs">
  </label><br>
  <input type="submit" value="Add Flight">
</form>
</div>
<button><a href="/">Cancel</a></button>
<%- include('../partials/footer') %>